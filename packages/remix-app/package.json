{
  "name": "remix-app",
  "version": "0.0.0",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build.d.ts",
  "scripts": {
    "build:css": "tailwindcss -m -i styles/app.css -o app/styles/app.css",
    "build:remix": "remix build",
    "build": "run-s build:*",
    "dev": "concurrently \"npm:dev:css\" \"npm:dev:remix\" \"npm:dev:xstate\"",
    "dev:css": "tailwindcss -w -i styles/app.css -o app/styles/app.css",
    "dev:remix": "remix watch",
    "dev:xstate": "xstate typegen \"./app/**/*.ts?(x)\" --watch",
    "lint": "eslint .",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.6.0",
    "@remix-run/react": "^1.6.0",
    "@xstate/react": "^3.0.0",
    "react": "next",
    "react-dom": "next",
    "xstate": "^4.32.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "@remix-run/dev": "^1.6.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@xstate/cli": "^0.2.1",
    "cloudflare-env": "*",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "eslint-config-custom": "*",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.24",
    "tsconfig": "*",
    "typescript": "^4.6.4"
  }
}
